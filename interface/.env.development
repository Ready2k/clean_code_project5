# Development Environment Configuration for Prompt Library Interface

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/promptlib
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-for-development-only
JWT_EXPIRES_IN=24h

# Encryption Configuration
ENCRYPTION_KEY=dev-32-char-encryption-key-change

# Server Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Prompt Library Configuration
STORAGE_DIR=./data/prompts
ENABLE_CACHE=true
ENABLE_FILE_WATCHER=true

# Logging Configuration
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=true
LOGS_DIR=../logs
MAX_LOG_SIZE_MB=50
MAX_LOG_AGE_DAYS=30

# External LLM Services (Optional - for testing)
# OPENAI_API_KEY=your-openai-api-key-here
# AWS_ACCESS_KEY_ID=your-aws-access-key-here
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
# AWS_REGION=us-east-1

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=5m

# Rate Limiting (relaxed for development)
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=50
RATE_LIMIT_WINDOW=15m

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Development Features
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_DATA=true
SKIP_AUTH_FOR_DEVELOPMENT=false
DEMO_MODE=true
SKIP_DATABASE_INIT=true
SKIP_REDIS_INIT=true