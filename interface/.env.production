# Production Environment Configuration
# Copy this file to .env and update with your production values

# Domain Configuration
DOMAIN=promptlibrary.com
SUBDOMAIN_MONITORING=monitoring.promptlibrary.com

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0
PORT=8000
PROMETHEUS_PORT=9090

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=promptlib
POSTGRES_USER=promptlib_user
POSTGRES_PASSWORD=your-secure-database-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password-here

# Storage Configuration
STORAGE_DIR=/app/data
LOGS_DIR=/app/logs
BACKUP_DIR=/backups
RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
BACKUP_WEBHOOK_URL=https://your-monitoring-service.com/webhook
DEPLOYMENT_WEBHOOK_URL=https://your-deployment-service.com/webhook

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@promptlibrary.com
SMTP_PASSWORD=your-email-password-here

# PagerDuty Configuration (optional)
PAGERDUTY_ROUTING_KEY=your-pagerduty-routing-key-here

# SSL Configuration
LETSENCRYPT_EMAIL=admin@promptlibrary.com

# Backup Configuration
BACKUP_WEBHOOK_URL=https://your-backup-monitoring.com/webhook

# Performance Configuration
MAX_CONNECTIONS=200
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# External API Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1

# Monitoring and Alerting
ENABLE_METRICS=true
ENABLE_TRACING=true
HEALTH_CHECK_INTERVAL=30

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
CORS_ORIGIN=https://promptlibrary.com

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_TIMEOUT=86400000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false

# Development/Debug (set to false in production)
DEBUG=false
ENABLE_DEBUG_ROUTES=false