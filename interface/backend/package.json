{
  "name": "prompt-library-backend",
  "version": "1.0.0",
  "description": "Backend API server for the Prompt Library interface",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose src/__tests__ --exclude=src/__tests__/integration",
    "test:integration": "vitest run --reporter=verbose src/__tests__/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/scripts/migrate.ts migrate",
    "migrate:rollback": "tsx src/scripts/migrate.ts rollback",
    "migrate:status": "tsx src/scripts/migrate.ts status",
    "migrate:pending": "tsx src/scripts/migrate.ts pending",
    "migrate:executed": "tsx src/scripts/migrate.ts executed",
    "db:test": "tsx src/scripts/test-db.ts",
    "migrate:providers": "tsx src/scripts/migrate-system-providers.ts migrate",
    "migrate:providers:dry-run": "tsx src/scripts/migrate-system-providers.ts dry-run",
    "migrate:providers:status": "tsx src/scripts/migrate-system-providers.ts status",
    "migrate:providers:validate": "tsx src/scripts/migrate-system-providers.ts validate",
    "validate:data": "tsx src/scripts/validate-data-integrity.ts"
  },
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "archiver": "^6.0.1",
    "bcrypt": "^5.1.1",
    "commander": "^6.2.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "vite": "7.1.8",
    "winston": "^3.11.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/commander": "^2.12.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
