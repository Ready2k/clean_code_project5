# Dynamic Provider Management Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (required for dynamic providers)
DATABASE_URL=postgresql://username:password@localhost:5432/prompt_library
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prompt_library
DB_USER=prompt_library_user
DB_PASSWORD=your_secure_password

# Redis Configuration (for caching provider registry)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Provider Registry Configuration
PROVIDER_REGISTRY_CACHE_TTL=300
PROVIDER_REGISTRY_REFRESH_INTERVAL=3600
PROVIDER_HEALTH_CHECK_INTERVAL=300
PROVIDER_TEST_TIMEOUT=30000

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=http://localhost:8000
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
API_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/application.log
DEBUG=dynamic-providers:*

# Provider Health Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_USAGE_THRESHOLD=0.8

# Feature Flags
DYNAMIC_PROVIDERS_ENABLED=true
PROVIDER_TEMPLATES_ENABLED=true
PROVIDER_IMPORT_EXPORT_ENABLED=true
PROVIDER_ANALYTICS_ENABLED=true

# External Service Configuration
OPENAI_DEFAULT_BASE_URL=https://api.openai.com/v1
ANTHROPIC_DEFAULT_BASE_URL=https://api.anthropic.com/v1
BEDROCK_DEFAULT_REGION=us-east-1

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/prompt-library

# Development/Testing Configuration
NODE_ENV=production
PORT=8000
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=true

# Monitoring and Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourcompany.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health

# Provider-Specific Defaults
DEFAULT_REQUEST_TIMEOUT=30000
DEFAULT_MAX_RETRIES=3
DEFAULT_RATE_LIMIT_RPM=60
DEFAULT_RATE_LIMIT_TPM=10000

# Template Configuration
SYSTEM_TEMPLATES_ENABLED=true
CUSTOM_TEMPLATES_ENABLED=true
TEMPLATE_VALIDATION_ENABLED=true

# Import/Export Configuration
EXPORT_MAX_PROVIDERS=100
IMPORT_MAX_FILE_SIZE=10485760
IMPORT_VALIDATION_ENABLED=true
EXPORT_ENCRYPTION_ENABLED=false

# Connection Migration
CONNECTION_MIGRATION_ENABLED=true
CONNECTION_MIGRATION_BATCH_SIZE=100
CONNECTION_MIGRATION_DELAY=1000

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_FILE=logs/audit.log
AUDIT_LOG_RETENTION_DAYS=90