# Environment Configuration for Prompt Library Interface

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/promptlib
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# Server Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Prompt Library Configuration
STORAGE_DIR=./data/prompts
ENABLE_CACHE=true
ENABLE_FILE_WATCHER=false

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_DIR=./logs

# External LLM Services (Optional - for system-wide defaults)
OPENAI_API_KEY=your-openai-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# Rate Limiting
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
RATE_LIMIT_WINDOW=15m

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true